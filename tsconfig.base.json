{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@uparm-automation/auth/common": ["libs/auth/common/src/index.ts"],
      "@uparm-automation/auth/server-module": [
        "libs/auth/server-module/src/index.ts"
      ],
      "@uparm-automation/auth/web-client": [
        "libs/auth/web-client/src/index.ts"
      ],
      "@uparm-automation/databases": ["libs/databases/src/index.ts"],
      "@uparm-automation/web-client/error-handler": [
        "libs/web-client/error-handler/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
