{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@uparm-automation/auth-module": ["libs/auth/module/src/index.ts"],
      "@uparm-automation/auth-web-pages": ["libs/auth/web-pages/src/index.ts"],
      "@uparm-automation/database": ["libs/database/src/index.ts"],
      "@uparm-automation/event-log-module": [
        "libs/event-log/module/src/index.ts"
      ],
      "@uparm-automation/event-log-web-pages": [
        "libs/event-log/web-pages/src/index.ts"
      ],
      "@uparm-automation/home/module": ["libs/home/module/src/index.ts"],
      "@uparm-automation/home/web-page": ["libs/home/web-page/src/index.ts"],
      "@uparm-automation/web-error-interceptor": [
        "libs/web/error-interceptor/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
