{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@uparm-automation/auth/auth-api": ["libs/auth/auth-api/src/index.ts"],
      "@uparm-automation/auth/auth-interfaces": [
        "libs/auth/auth-interfaces/src/index.ts"
      ],
      "@uparm-automation/auth/auth-web": ["libs/auth/auth-web/src/index.ts"],
      "@uparm-automation/databases": ["libs/databases/src/index.ts"],
      "@uparm-automation/home/home-api": ["libs/home/home-api/src/index.ts"],
      "@uparm-automation/home/home-interfaces": [
        "libs/home/home-interfaces/src/index.ts"
      ],
      "@uparm-automation/home/home-web": ["libs/home/home-web/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
